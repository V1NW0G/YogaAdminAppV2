<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for Class ID -->
    <EditText
        android:id="@+id/classIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Class ID"
        android:inputType="number" />

    <!-- TextView to show Day of Week -->
    <TextView
        android:id="@+id/classDayOfWeekTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/design_default_color_error"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <!-- EditText for Date with Date Picker -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- Date EditText -->
        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Pick Monday"
            android:focusable="false"
            android:clickable="true"
            android:textSize="16sp"
            android:padding="12dp"
            android:inputType="none" />

        <!-- Button to open Date Picker -->
        <Button
            android:id="@+id/datePickerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Date"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- EditText for Teacher Name -->
    <EditText
        android:id="@+id/teacherEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teacher" />

    <!-- EditText for Comment -->
    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment" />

    <!-- Button to save class -->
    <Button
        android:id="@+id/saveClassButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Class" />
</LinearLayout>