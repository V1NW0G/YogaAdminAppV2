<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Update/Delete Button on top -->
    <Button
        android:id="@+id/updateDeleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update/Delete"
        android:layout_marginBottom="16dp"/>

    <!-- Course Details -->
    <TextView
        android:id="@+id/courseTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Course Title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/courseDayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Day: Monday"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/courseTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: 12:00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/coursePriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: $100"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/courseDurationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration: 60 minutes"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/courseCapacityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capacity: 20 people"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/courseTypeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type: Yoga"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/courseDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description: Introduction to yoga"
        android:textSize="16sp" />

    <!-- Classes Details -->
    <TextView
        android:id="@+id/classDetailsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <!-- ListView for Classes -->
    <ListView
        android:id="@+id/classListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
</LinearLayout>