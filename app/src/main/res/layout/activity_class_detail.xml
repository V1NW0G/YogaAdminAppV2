<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Class Details -->
    <TextView
        android:id="@+id/classIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class ID"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/classDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/classTeacherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/classCommentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textSize="14sp" />

    <!-- Course Information -->
    <TextView
        android:id="@+id/courseIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course ID"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <!-- Add more TextViews for Course details -->
    <TextView
        android:id="@+id/courseNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/courseDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Description"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

</LinearLayout>